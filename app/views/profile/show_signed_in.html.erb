<h4>Profile</h4>
<p><%= @user.email %></p>
<p>Mangas:</p>
<ul>
  <% @user.mangas.each do |manga| %>
    <li>
      <%= manga.title %>
      <%= link_to 'Edit', edit_manga_path(manga), class: "edit-link" %>
      <%= button_to 'Destroy', manga_path(manga), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-link" %>
    </li>
  <% end %>
</ul>
<%= link_to "Add new", new_manga_path %>
<%= link_to "Back to home", root_path %>